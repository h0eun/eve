<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:orientation="vertical"
    tools:context=".fragment_home">

    <!--여기는 앱을 열면 처음으로 보이는 홈입니다~ 6개의 버튼이 있고 검색창이 있고 하단에 네비가 있습니다

    //검색창-->

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="16dp"
        app:iconifiedByDefault="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="검색어를 입력하세요"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/daily_stamp_button"
        android:layout_width="129dp"
        android:layout_height="134dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="104dp"
        android:background="#00FFFFFF"
        android:shadowColor="#00FFFFFF"
        android:textColor="@color/black"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/daily_camera_icon"
        app:iconSize="100dp"
        app:iconTint="#404040"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#00FFFFFF" />

    <Button
        android:id="@+id/plan_choose_button"
        android:layout_width="120dp"
        android:layout_height="135dp"
        android:layout_marginStart="224dp"
        android:layout_marginLeft="224dp"
        android:layout_marginTop="108dp"
        android:background="#00FFFFFF"
        android:shadowColor="#00FFFFFF"
        android:textColor="#000000"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/ic_baseline_find_in_page_24"
        app:iconSize="100dp"
        app:iconTint="#404040"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#00FFFFFF" />

    <Button
        android:id="@+id/community_button"
        android:layout_width="123dp"
        android:layout_height="96dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="308dp"
        android:background="#00FFFFFF"
        android:textColor="#000000"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/ic_baseline_group_24"
        app:iconSize="100dp"
        app:iconTint="#404040"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/inbody_check_button"
        android:layout_width="119dp"
        android:layout_height="113dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="300dp"
        android:background="#00FFFFFF"
        android:textColor="#000000"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/ic_baseline_monitor_weight_24"
        app:iconSize="100dp"
        app:iconTint="#404040"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/walking_button"
        android:layout_width="130dp"
        android:layout_height="116dp"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginBottom="148dp"
        android:background="#00FFFFFF"
        android:textColor="#000000"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/ic_baseline_directions_run_24"
        app:iconSize="100dp"
        app:iconTint="#404040"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/record_button"
        android:layout_width="126dp"
        android:layout_height="112dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="148dp"
        android:background="#00FFFFFF"
        android:textColor="#000000"
        app:backgroundTint="#00FFFFFF"
        app:icon="@drawable/ic_baseline_format_list_bulleted_24"
        app:iconSize="100dp"
        app:iconTint="#404040"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:text="헬루"
        android:textColor="#070F3E"
        android:textSize="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>