<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Widget.fontChange_nanum"
    tools:context=".plan_choose">

    <!--홈에서 'AI 플랜 추천' 아이콘을 누르면 나오는 화면-->

    <TextView
        android:id="@+id/pch_text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="환영합니다!"
        android:textColor="@color/dark_blue"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/pch_text_explain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="인공지능이 당신의 상태를 분석하여\n맞춤 플랜을 추천해드립니다."
        android:textColor="@color/dark_blue"
        android:textSize="17dp"
        android:layout_marginLeft="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="176dp"
        android:layout_marginVertical="30dp"
        android:background="@color/dark_blue"/>

    <Button
        android:id="@+id/pch_button_plan"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginVertical="10dp"
        android:text="AI가 선별해주는 플랜"
        app:backgroundTint="@color/key_color"/>

    <Button
        android:id="@+id/pch_button_inbody"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginVertical="10dp"
        android:text="인바디 체중계로 연동하기"
        app:backgroundTint="@color/key_color"/>

    <Button
        android:id="@+id/pch_button_weight"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginVertical="10dp"
        android:text=" 일반 체중계로 연동하기"
        app:backgroundTint="@color/key_color"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        android:layout_gravity="center"
        android:text="플랜을 정하면 전문 트레이너를 매칭시켜 드려요!"
        android:textColor="@color/dark_blue"
        android:textSize="15dp"/>

</LinearLayout>